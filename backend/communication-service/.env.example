# Communication Service - Environment Variables Example
# Copy this file to .env and customize for your environment
# This file is tracked in Git as an example - DO NOT add sensitive data here

# =============================================================================
# SPRING CONFIGURATION
# =============================================================================
SPRING_PROFILES_ACTIVE=local
SERVER_PORT=8083

# =============================================================================
# MONGODB CONFIGURATION
# =============================================================================
MONGODB_URI=mongodb://localhost:27017/communication_service
MONGODB_USERNAME=your-mongodb-username
MONGODB_PASSWORD=your-mongodb-password
MONGODB_DATABASE=communication_service

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
JWT_SECRET=your-256-bit-secret-key-here-minimum-32-characters-long
JWT_EXPIRATION=86400000

# =============================================================================
# MAIL CONFIGURATION
# =============================================================================
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password-here

# =============================================================================
# CORS AND WEBSOCKET CONFIGURATION
# =============================================================================
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001
WEBSOCKET_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# =============================================================================
# NOTIFICATION CONFIGURATION
# =============================================================================
EMAIL_NOTIFICATIONS_ENABLED=true
EMAIL_FROM_ADDRESS=noreply@communityconnect.com
EMAIL_FROM_NAME=Community Connect

PUSH_NOTIFICATIONS_ENABLED=false
FCM_SERVER_KEY=your-fcm-server-key-here

# =============================================================================
# MESSAGING CONFIGURATION
# =============================================================================
MAX_MESSAGE_LENGTH=1000
MESSAGE_HISTORY_DAYS=30
MAX_CONVERSATION_SIZE=10000

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================
CORE_SERVICE_URL=http://localhost:8081
TRANSACTION_SERVICE_URL=http://localhost:8082

# =============================================================================
# SMS CONFIGURATION (Africa's Talking)
# =============================================================================
SMS_PROVIDER=africas_talking
AFRICAS_TALKING_USERNAME=your-africas-talking-username
AFRICAS_TALKING_API_KEY=your-africas-talking-api-key
SMS_SENDER_ID=CommunityConnect

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
LOG_LEVEL=INFO
MONGODB_LOG_LEVEL=WARN
WEBSOCKET_LOG_LEVEL=INFO
LOG_FILE=logs/communication-service.log

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
# Enable/disable features for development
ENABLE_DEBUG_LOGGING=false
MOCK_EXTERNAL_SERVICES=false
MOCK_SMS_PROVIDER=false