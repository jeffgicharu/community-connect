# Community Connect Communication Service Environment Variables
# Copy this file to .env and modify the values as needed for your local development

# ==============================================
# Spring Profile Configuration
# ==============================================
SPRING_PROFILES_ACTIVE=local

# ==============================================
# MongoDB Configuration
# ==============================================
MONGO_HOST=localhost
MONGO_PORT=27017
MONGO_DATABASE=communication_service
MONGO_USERNAME=mongo_user
MONGO_PASSWORD=mongo_pass

# ==============================================
# MongoDB Logging Configuration
# ==============================================
MONGO_LOG_LEVEL=WARN

# ==============================================
# CORS Configuration
# ==============================================
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# ==============================================
# WebSocket Configuration
# ==============================================
WS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# ==============================================
# Logging Configuration
# ==============================================
LOG_LEVEL=INFO
SECURITY_LOG_LEVEL=INFO

# ==============================================
# Messaging Configuration
# ==============================================
MAX_MESSAGE_LENGTH=2000
MESSAGE_RETENTION_DAYS=90
MAX_PARTICIPANTS=2

# ==============================================
# Notification Configuration
# ==============================================
NOTIFICATION_RETENTION_DAYS=30
NOTIFICATION_BATCH_SIZE=100
MAX_RETRY_ATTEMPTS=3

# ==============================================
# Email Configuration
# ==============================================
EMAIL_FROM=noreply@communityconnect.co.ke
EMAIL_FROM_NAME=Community Connect
EMAIL_TEMPLATE_BASE_URL=http://localhost:3000

# ==============================================
# External Service URLs (for inter-service communication)
# ==============================================
CORE_SERVICE_URL=http://localhost:8081/api/v1
TRANSACTION_SERVICE_URL=http://localhost:8082/api/v1

# ==============================================
# Redis Configuration (for session management)
# ==============================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DATABASE=1

# ==============================================
# RabbitMQ Configuration (for message queue)
# ==============================================
RABBITMQ_HOST=localhost
RABBITMQ_PORT=5672
RABBITMQ_USERNAME=rabbit_user
RABBITMQ_PASSWORD=rabbit_pass
RABBITMQ_VIRTUAL_HOST=/

# ==============================================
# Push Notification Configuration
# ==============================================
# Firebase Cloud Messaging (FCM) for push notifications
FCM_PROJECT_ID=your-firebase-project-id
FCM_PRIVATE_KEY_ID=your-private-key-id
FCM_PRIVATE_KEY=your-private-key
FCM_CLIENT_EMAIL=your-service-account-email
FCM_CLIENT_ID=your-client-id
FCM_TOKEN_URI=https://oauth2.googleapis.com/token

# ==============================================
# SMS Configuration (Optional - Africa's Talking)
# ==============================================
SMS_API_KEY=your-africas-talking-api-key
SMS_USERNAME=your-africas-talking-username
SMS_SHORTCODE=your-shortcode

# ==============================================
# Development/Testing Configuration
# ==============================================
# Set to true to enable test data seeding
ENABLE_TEST_DATA=false

# Set to true to enable WebSocket debug logging
ENABLE_WEBSOCKET_DEBUG=false

# Set to true to enable MongoDB query logging
ENABLE_MONGO_LOGGING=false