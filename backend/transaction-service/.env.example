# Transaction Service - Environment Variables Example
# Copy this file to .env and customize for your environment
# This file is tracked in Git as an example - DO NOT add sensitive data here

# =============================================================================
# SPRING CONFIGURATION
# =============================================================================
SPRING_PROFILES_ACTIVE=local
SERVER_PORT=8082

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DATABASE_URL=jdbc:postgresql://localhost:5433/transaction_service
DATABASE_USERNAME=postgres
DATABASE_PASSWORD=your-database-password-here
DATABASE_POOL_SIZE=10

# JPA/Hibernate Configuration
JPA_DDL_AUTO=update

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
JWT_SECRET=your-256-bit-secret-key-here-minimum-32-characters-long
JWT_EXPIRATION=86400000

# =============================================================================
# REDIS CONFIGURATION (for State Machine)
# =============================================================================
REDIS_ENABLED=true
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your-redis-password-here
REDIS_DATABASE=0

# =============================================================================
# CORS CONFIGURATION
# =============================================================================
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# =============================================================================
# CREDIT SYSTEM CONFIGURATION
# =============================================================================
INITIAL_CREDIT_BALANCE=2
WELCOME_CREDIT_BONUS=2
MAX_CREDIT_BALANCE=100

# =============================================================================
# TRANSACTION CONFIGURATION
# =============================================================================
TRANSACTION_EXPIRATION_HOURS=24
AUTO_COMPLETE_HOURS=72

# =============================================================================
# MATCHING CONFIGURATION
# =============================================================================
MATCHING_RADIUS_KM=10
MATCHING_MAX_RESULTS=20

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================
CORE_SERVICE_URL=http://localhost:8081
COMMUNICATION_SERVICE_URL=http://localhost:8083

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
LOG_LEVEL=INFO
STATEMACHINE_LOG_LEVEL=INFO
LOG_FILE=logs/transaction-service.log

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
# Enable/disable features for development
ENABLE_DEBUG_LOGGING=false
MOCK_EXTERNAL_SERVICES=false