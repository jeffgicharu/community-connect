# Community Connect Transaction Service Environment Variables
# Copy this file to .env and modify the values as needed for your local development

# ==============================================
# Spring Profile Configuration
# ==============================================
SPRING_PROFILES_ACTIVE=local

# ==============================================
# Database Configuration
# ==============================================
DB_HOST=localhost
DB_PORT=5433
DB_NAME=transaction_service
DB_USERNAME=transaction_user
DB_PASSWORD=transaction_pass

# ==============================================
# JPA/Hibernate Configuration
# ==============================================
JPA_SHOW_SQL=false
SQL_LOG_LEVEL=WARN

# ==============================================
# CORS Configuration
# ==============================================
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# ==============================================
# Logging Configuration
# ==============================================
LOG_LEVEL=INFO
SECURITY_LOG_LEVEL=INFO

# ==============================================
# Transaction Configuration
# ==============================================
DEFAULT_CREDIT_LIMIT=50
NEW_USER_CREDITS=2
MAX_PENDING_REQUESTS=10
REQUEST_EXPIRATION_DAYS=7

# ==============================================
# Credit System Configuration
# ==============================================
MIN_CREDIT_BALANCE=0
MAX_CREDIT_BALANCE=1000

# ==============================================
# Matching Configuration
# ==============================================
MATCHING_RADIUS_KM=10
MAX_MATCHES=10

# ==============================================
# External Service URLs (for inter-service communication)
# ==============================================
CORE_SERVICE_URL=http://localhost:8081/api/v1
COMMUNICATION_SERVICE_URL=http://localhost:8083/api/v1

# ==============================================
# Redis Configuration (for caching)
# ==============================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DATABASE=0

# ==============================================
# RabbitMQ Configuration (for messaging)
# ==============================================
RABBITMQ_HOST=localhost
RABBITMQ_PORT=5672
RABBITMQ_USERNAME=rabbit_user
RABBITMQ_PASSWORD=rabbit_pass
RABBITMQ_VIRTUAL_HOST=/

# ==============================================
# Development/Testing Configuration
# ==============================================
# Set to true to enable test data seeding
ENABLE_TEST_DATA=false

# Set to true to enable detailed SQL logging
ENABLE_SQL_LOGGING=false

# Set to true to enable transaction state machine debugging
ENABLE_STATEMACHINE_DEBUG=false