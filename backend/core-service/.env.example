# Core Service - Environment Variables Example
# Copy this file to .env and customize for your environment
# This file is tracked in Git as an example - DO NOT add sensitive data here

# =============================================================================
# SPRING CONFIGURATION
# =============================================================================
SPRING_PROFILES_ACTIVE=local
SERVER_PORT=8081

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DATABASE_URL=jdbc:postgresql://localhost:5432/core_service
DATABASE_USERNAME=postgres
DATABASE_PASSWORD=your-database-password-here
DATABASE_POOL_SIZE=10

# JPA/Hibernate Configuration
JPA_DDL_AUTO=update

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
JWT_SECRET=your-256-bit-secret-key-here-minimum-32-characters-long
JWT_EXPIRATION=86400000
JWT_REFRESH_EXPIRATION=604800000

# =============================================================================
# MAIL CONFIGURATION
# =============================================================================
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password-here

# =============================================================================
# FILE UPLOAD CONFIGURATION
# =============================================================================
MAX_FILE_SIZE=10MB
MAX_REQUEST_SIZE=10MB

# =============================================================================
# CLOUDINARY CONFIGURATION
# =============================================================================
CLOUDINARY_CLOUD_NAME=your-cloudinary-cloud-name
CLOUDINARY_API_KEY=your-cloudinary-api-key
CLOUDINARY_API_SECRET=your-cloudinary-api-secret

# =============================================================================
# CORS CONFIGURATION
# =============================================================================
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# =============================================================================
# VERIFICATION SETTINGS
# =============================================================================
EMAIL_VERIFICATION_EXPIRATION=3600000
PHONE_VERIFICATION_EXPIRATION=600000

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
LOG_LEVEL=INFO
SQL_LOG_LEVEL=WARN
LOG_FILE=logs/core-service.log

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
# Enable/disable features for development
ENABLE_H2_CONSOLE=false
ENABLE_DEBUG_LOGGING=false