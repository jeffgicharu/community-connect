# Community Connect Core Service Environment Variables
# Copy this file to .env and modify the values as needed for your local development

# ==============================================
# Spring Profile Configuration
# ==============================================
SPRING_PROFILES_ACTIVE=local

# ==============================================
# Database Configuration
# ==============================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=core_service
DB_USERNAME=core_user
DB_PASSWORD=core_pass

# ==============================================
# JPA/Hibernate Configuration
# ==============================================
JPA_SHOW_SQL=false
SQL_LOG_LEVEL=WARN

# ==============================================
# JWT Security Configuration
# ==============================================
JWT_SECRET=community-connect-super-secret-key-change-in-production-minimum-512-bits
JWT_EXPIRATION=86400000
JWT_REFRESH_EXPIRATION=604800000

# ==============================================
# Email Configuration (SMTP)
# ==============================================
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password

# ==============================================
# Cloudinary Configuration (Image Management)
# ==============================================
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# ==============================================
# CORS Configuration
# ==============================================
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# ==============================================
# Logging Configuration
# ==============================================
LOG_LEVEL=INFO
SECURITY_LOG_LEVEL=INFO

# ==============================================
# File Upload Configuration
# ==============================================
MAX_FILE_SIZE=5MB

# ==============================================
# Email Verification Configuration
# ==============================================
EMAIL_VERIFICATION_EXPIRATION=60
PHONE_VERIFICATION_EXPIRATION=5

# ==============================================
# External Service URLs (for inter-service communication)
# ==============================================
TRANSACTION_SERVICE_URL=http://localhost:8082/api/v1
COMMUNICATION_SERVICE_URL=http://localhost:8083/api/v1

# ==============================================
# Development/Testing Configuration
# ==============================================
# Set to true to enable test data seeding
ENABLE_TEST_DATA=false

# Set to true to enable detailed SQL logging
ENABLE_SQL_LOGGING=false

# Set to true to enable security debug logging
ENABLE_SECURITY_DEBUG=false