# Community Connect Services Environment Variables
# Copy this file to .env.services and modify the values as needed
# These variables are used by docker-compose.services.yml

# ==============================================
# Core Service Configuration
# ==============================================
CORE_SPRING_PROFILES_ACTIVE=local
CORE_JWT_SECRET=community-connect-super-secret-key-change-in-production-minimum-512-bits
CORE_JWT_EXPIRATION=86400000
CORE_JWT_REFRESH_EXPIRATION=604800000

# Core Service - Email Configuration
CORE_MAIL_HOST=smtp.gmail.com
CORE_MAIL_PORT=587
CORE_MAIL_USERNAME=your-email@gmail.com
CORE_MAIL_PASSWORD=your-app-password

# Core Service - Cloudinary Configuration
CORE_CLOUDINARY_CLOUD_NAME=your-cloud-name
CORE_CLOUDINARY_API_KEY=your-api-key
CORE_CLOUDINARY_API_SECRET=your-api-secret

# Core Service - CORS and Logging
CORE_CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001
CORE_LOG_LEVEL=INFO
CORE_SECURITY_LOG_LEVEL=INFO

# ==============================================
# Transaction Service Configuration
# ==============================================
TRANSACTION_SPRING_PROFILES_ACTIVE=local

# Transaction Service - Business Logic
TRANSACTION_DEFAULT_CREDIT_LIMIT=50
TRANSACTION_NEW_USER_CREDITS=2
TRANSACTION_MAX_PENDING_REQUESTS=10
TRANSACTION_REQUEST_EXPIRATION_DAYS=7

# Transaction Service - Credit System
TRANSACTION_MIN_CREDIT_BALANCE=0
TRANSACTION_MAX_CREDIT_BALANCE=1000

# Transaction Service - Matching
TRANSACTION_MATCHING_RADIUS_KM=10
TRANSACTION_MAX_MATCHES=10

# Transaction Service - CORS and Logging
TRANSACTION_CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001
TRANSACTION_LOG_LEVEL=INFO
TRANSACTION_SECURITY_LOG_LEVEL=INFO

# ==============================================
# Communication Service Configuration
# ==============================================
COMMUNICATION_SPRING_PROFILES_ACTIVE=local

# Communication Service - Messaging
COMMUNICATION_MAX_MESSAGE_LENGTH=2000
COMMUNICATION_MESSAGE_RETENTION_DAYS=90
COMMUNICATION_MAX_PARTICIPANTS=2

# Communication Service - Notifications
COMMUNICATION_NOTIFICATION_RETENTION_DAYS=30
COMMUNICATION_NOTIFICATION_BATCH_SIZE=100
COMMUNICATION_MAX_RETRY_ATTEMPTS=3

# Communication Service - Email
COMMUNICATION_EMAIL_FROM=noreply@communityconnect.co.ke
COMMUNICATION_EMAIL_FROM_NAME=Community Connect
COMMUNICATION_EMAIL_TEMPLATE_BASE_URL=http://localhost:3000

# Communication Service - CORS and WebSocket
COMMUNICATION_CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001
COMMUNICATION_WS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# Communication Service - Logging
COMMUNICATION_LOG_LEVEL=INFO
COMMUNICATION_SECURITY_LOG_LEVEL=INFO
COMMUNICATION_MONGO_LOG_LEVEL=WARN

# ==============================================
# Frontend Service Configuration
# ==============================================
FRONTEND_NODE_ENV=development

# Frontend - NextAuth
FRONTEND_NEXTAUTH_URL=http://localhost:3000
FRONTEND_NEXTAUTH_SECRET=community-connect-nextauth-secret-change-in-production

# Frontend - OAuth Providers
FRONTEND_GOOGLE_CLIENT_ID=your-google-client-id
FRONTEND_GOOGLE_CLIENT_SECRET=your-google-client-secret

# Frontend - Cloudinary
FRONTEND_CLOUDINARY_CLOUD_NAME=your-cloudinary-cloud-name
FRONTEND_CLOUDINARY_UPLOAD_PRESET=your-upload-preset

# Frontend - Feature Flags
FRONTEND_ENABLE_ANALYTICS=false
FRONTEND_ENABLE_CHAT=true
FRONTEND_ENABLE_NOTIFICATIONS=true