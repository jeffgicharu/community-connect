# Community Connect - Infrastructure Environment Variables
# Copy this file to .env and customize for your environment
# This file is tracked in Git as an example - DO NOT add sensitive data here

# =============================================================================
# POSTGRESQL - CORE SERVICE
# =============================================================================
POSTGRES_CORE_CONTAINER=community-connect-postgres-core
POSTGRES_CORE_PORT=5432
POSTGRES_CORE_DB=core_service
POSTGRES_CORE_USER=postgres
POSTGRES_CORE_PASSWORD=your-secure-password-here

# =============================================================================
# POSTGRESQL - TRANSACTION SERVICE
# =============================================================================
POSTGRES_TRANSACTION_CONTAINER=community-connect-postgres-transaction
POSTGRES_TRANSACTION_PORT=5433
POSTGRES_TRANSACTION_DB=transaction_service
POSTGRES_TRANSACTION_USER=postgres
POSTGRES_TRANSACTION_PASSWORD=your-secure-password-here

# =============================================================================
# MONGODB - COMMUNICATION SERVICE
# =============================================================================
MONGODB_CONTAINER=community-connect-mongodb
MONGODB_PORT=27017
MONGODB_DB=communication_service
MONGODB_ROOT_USER=admin
MONGODB_ROOT_PASSWORD=your-secure-password-here

# =============================================================================
# REDIS - CACHING SERVICE
# =============================================================================
REDIS_CONTAINER=community-connect-redis
REDIS_PORT=6379
REDIS_PASSWORD=your-secure-password-here

# =============================================================================
# RABBITMQ - MESSAGE QUEUE SERVICE
# =============================================================================
RABBITMQ_CONTAINER=community-connect-rabbitmq
RABBITMQ_AMQP_PORT=5672
RABBITMQ_MANAGEMENT_PORT=15672
RABBITMQ_USER=admin
RABBITMQ_PASSWORD=your-secure-password-here
RABBITMQ_VHOST=community-connect

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
# Set to 'development' for local development, 'production' for deployment
ENVIRONMENT=development

# Logging level (DEBUG, INFO, WARN, ERROR)
LOG_LEVEL=INFO

# =============================================================================
# NETWORK SETTINGS
# =============================================================================
# Docker network name (usually auto-generated)
NETWORK_NAME=community-connect-network

# =============================================================================
# VOLUME SETTINGS
# =============================================================================
# Volume name prefixes (useful for multi-environment setups)
VOLUME_PREFIX=community-connect

# =============================================================================
# SECURITY SETTINGS
# =============================================================================
# JWT secret for authentication (generate a strong secret)
JWT_SECRET=your-jwt-secret-key-here-minimum-256-bits

# Encryption key for sensitive data
ENCRYPTION_KEY=your-encryption-key-here

# =============================================================================
# EXTERNAL SERVICES (for future integration)
# =============================================================================
# Email service
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# SMS service (Africa's Talking)
AFRICAS_TALKING_USERNAME=your-username
AFRICAS_TALKING_API_KEY=your-api-key

# File storage (Cloudinary)
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret