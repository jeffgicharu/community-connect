# Community Connect - Infrastructure Environment Variables
# Copy this file to .env and modify the values as needed for your local development

# ==============================================
# PostgreSQL Core Service Database
# ==============================================
POSTGRES_CORE_USER=core_user
POSTGRES_CORE_PASSWORD=core_pass
POSTGRES_CORE_DB=core_service
POSTGRES_CORE_HOST=localhost
POSTGRES_CORE_PORT=5432

# ==============================================
# PostgreSQL Transaction Service Database
# ==============================================
POSTGRES_TRANSACTION_USER=transaction_user
POSTGRES_TRANSACTION_PASSWORD=transaction_pass
POSTGRES_TRANSACTION_DB=transaction_service
POSTGRES_TRANSACTION_HOST=localhost
POSTGRES_TRANSACTION_PORT=5433

# ==============================================
# MongoDB Communication Service Database
# ==============================================
MONGO_INITDB_ROOT_USERNAME=mongo_user
MONGO_INITDB_ROOT_PASSWORD=mongo_pass
MONGO_INITDB_DATABASE=communication_service
MONGO_HOST=localhost
MONGO_PORT=27017

# ==============================================
# Redis Cache
# ==============================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# ==============================================
# RabbitMQ Message Queue
# ==============================================
RABBITMQ_DEFAULT_USER=rabbit_user
RABBITMQ_DEFAULT_PASS=rabbit_pass
RABBITMQ_HOST=localhost
RABBITMQ_PORT=5672
RABBITMQ_MANAGEMENT_PORT=15672

# ==============================================
# Elasticsearch (Optional - for search functionality)
# ==============================================
ELASTICSEARCH_HOST=localhost
ELASTICSEARCH_PORT=9200
ELASTICSEARCH_USERNAME=elastic
ELASTICSEARCH_PASSWORD=elastic_pass

# ==============================================
# General Settings
# ==============================================
# Environment (development, staging, production)
ENVIRONMENT=development

# Logging level (DEBUG, INFO, WARN, ERROR)
LOG_LEVEL=INFO

# Docker network settings
DOCKER_NETWORK_SUBNET=172.20.0.0/16