# Community Connect Frontend Environment Variables
# Copy this file to .env.local and fill in the values

# ==============================================
# API Configuration
# ==============================================
NEXT_PUBLIC_API_URL=http://localhost:8080
NEXT_PUBLIC_CORE_SERVICE_URL=http://localhost:8081/api/v1
NEXT_PUBLIC_TRANSACTION_SERVICE_URL=http://localhost:8082/api/v1
NEXT_PUBLIC_COMMUNICATION_SERVICE_URL=http://localhost:8083/api/v1

# ==============================================
# WebSocket Configuration
# ==============================================
NEXT_PUBLIC_WS_URL=ws://localhost:8083

# ==============================================
# NextAuth Configuration
# ==============================================
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-super-secret-nextauth-secret-change-in-production

# ==============================================
# OAuth Providers (Optional)
# ==============================================
# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# GitHub OAuth (Optional)
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# ==============================================
# External Services
# ==============================================
# Cloudinary for image uploads
NEXT_PUBLIC_CLOUDINARY_CLOUD_NAME=your-cloudinary-cloud-name
NEXT_PUBLIC_CLOUDINARY_UPLOAD_PRESET=your-upload-preset

# Google Maps API (for location services)
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# ==============================================
# App Configuration
# ==============================================
NEXT_PUBLIC_APP_NAME="Community Connect"
NEXT_PUBLIC_APP_DESCRIPTION="Local service exchange platform"
NEXT_PUBLIC_APP_URL=http://localhost:3000

# ==============================================
# Feature Flags
# ==============================================
NEXT_PUBLIC_ENABLE_ANALYTICS=false
NEXT_PUBLIC_ENABLE_CHAT=true
NEXT_PUBLIC_ENABLE_NOTIFICATIONS=true
NEXT_PUBLIC_ENABLE_OFFLINE_MODE=false

# ==============================================
# Analytics (Optional)
# ==============================================
# Google Analytics
NEXT_PUBLIC_GA_MEASUREMENT_ID=your-ga-measurement-id

# ==============================================
# Monitoring & Error Tracking
# ==============================================
# Sentry for error tracking
NEXT_PUBLIC_SENTRY_DSN=your-sentry-dsn
SENTRY_ORG=your-sentry-org
SENTRY_PROJECT=your-sentry-project
SENTRY_AUTH_TOKEN=your-sentry-auth-token

# ==============================================
# Development Configuration
# ==============================================
# Enable debug mode
NEXT_PUBLIC_DEBUG=false

# Show dev tools
NEXT_PUBLIC_SHOW_DEV_TOOLS=true

# Mock API responses (for development)
NEXT_PUBLIC_MOCK_API=false

# ==============================================
# Security
# ==============================================
# CSRF Secret
CSRF_SECRET=your-csrf-secret

# Rate limiting
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=900000

# ==============================================
# Email Configuration (for transactional emails)
# ==============================================
EMAIL_FROM=noreply@communityconnect.co.ke
EMAIL_FROM_NAME="Community Connect"

# ==============================================
# Database (if using edge functions)
# ==============================================
# Redis for session storage
REDIS_URL=redis://localhost:6379

# ==============================================
# Third-party Integrations
# ==============================================
# Push notifications (Firebase)
NEXT_PUBLIC_FIREBASE_API_KEY=your-firebase-api-key
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your-project-id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your-project.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your-sender-id
NEXT_PUBLIC_FIREBASE_APP_ID=your-app-id
NEXT_PUBLIC_FIREBASE_MEASUREMENT_ID=your-measurement-id

# ==============================================
# Testing
# ==============================================
# Test database URL (for testing)
TEST_DATABASE_URL=postgresql://test_user:test_pass@localhost:5432/test_db

# Playwright base URL
PLAYWRIGHT_BASE_URL=http://localhost:3000

# ==============================================
# Build Configuration
# ==============================================
# Bundle analyzer
ANALYZE=false

# Build optimization
NEXT_BUILD_OPTIMIZATION=true