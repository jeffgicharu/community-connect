# Community Connect Frontend - Environment Variables Example
# Copy this file to .env.local and customize for your environment
# This file is tracked in Git as an example - DO NOT add sensitive data here

# =============================================================================
# API CONFIGURATION
# =============================================================================
NEXT_PUBLIC_API_URL=http://localhost:8081/api/v1
NEXT_PUBLIC_CORE_SERVICE_URL=http://localhost:8081/api/v1
NEXT_PUBLIC_TRANSACTION_SERVICE_URL=http://localhost:8082/api/v1
NEXT_PUBLIC_COMMUNICATION_SERVICE_URL=http://localhost:8083/api/v1

# GraphQL Endpoint
NEXT_PUBLIC_GRAPHQL_URL=http://localhost:8081/graphql

# WebSocket Configuration
NEXT_PUBLIC_WS_URL=ws://localhost:8083/ws
NEXT_PUBLIC_SOCKET_IO_URL=http://localhost:8083

# =============================================================================
# EXTERNAL SERVICES (PUBLIC KEYS ONLY)
# =============================================================================
# Cloudinary Configuration (Public keys only)
NEXT_PUBLIC_CLOUDINARY_CLOUD_NAME=your-cloudinary-cloud-name
NEXT_PUBLIC_CLOUDINARY_API_KEY=your-cloudinary-api-key-public

# Google Maps API (if used for location services)
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
# App Environment
NEXT_PUBLIC_APP_ENV=development
NEXT_PUBLIC_APP_NAME=Community Connect
NEXT_PUBLIC_APP_VERSION=1.0.0

# Base URL for the application
NEXT_PUBLIC_BASE_URL=http://localhost:3000

# =============================================================================
# FEATURE FLAGS
# =============================================================================
NEXT_PUBLIC_ENABLE_ANALYTICS=false
NEXT_PUBLIC_ENABLE_ERROR_REPORTING=false
NEXT_PUBLIC_ENABLE_PWA=true
NEXT_PUBLIC_ENABLE_NOTIFICATIONS=true

# =============================================================================
# UI CONFIGURATION
# =============================================================================
# Theme settings
NEXT_PUBLIC_DEFAULT_THEME=light
NEXT_PUBLIC_DEFAULT_LOCALE=en

# Pagination defaults
NEXT_PUBLIC_DEFAULT_PAGE_SIZE=20
NEXT_PUBLIC_MAX_PAGE_SIZE=100

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# CORS origins (for development)
NEXT_PUBLIC_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# Cookie settings
NEXT_PUBLIC_COOKIE_DOMAIN=localhost
NEXT_PUBLIC_SESSION_TIMEOUT=3600000

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
# Debug modes
NEXT_PUBLIC_DEBUG_MODE=true
NEXT_PUBLIC_ENABLE_REDUX_DEVTOOLS=true

# Mock services (for development without backend)
NEXT_PUBLIC_MOCK_API=false
NEXT_PUBLIC_MOCK_AUTH=false

# =============================================================================
# MONITORING & ANALYTICS
# =============================================================================
# Sentry (Error Tracking)
NEXT_PUBLIC_SENTRY_DSN=your-sentry-dsn-here

# Google Analytics
NEXT_PUBLIC_GA_TRACKING_ID=your-ga-tracking-id

# =============================================================================
# SOCIAL AUTHENTICATION
# =============================================================================
# Google OAuth
NEXT_PUBLIC_GOOGLE_CLIENT_ID=your-google-oauth-client-id

# Facebook OAuth  
NEXT_PUBLIC_FACEBOOK_APP_ID=your-facebook-app-id

# =============================================================================
# FILE UPLOAD SETTINGS
# =============================================================================
NEXT_PUBLIC_MAX_FILE_SIZE=10485760
NEXT_PUBLIC_ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf

# =============================================================================
# COMMUNICATION SETTINGS
# =============================================================================
# Real-time features
NEXT_PUBLIC_ENABLE_REAL_TIME_NOTIFICATIONS=true
NEXT_PUBLIC_NOTIFICATION_TIMEOUT=5000

# Chat settings  
NEXT_PUBLIC_MAX_MESSAGE_LENGTH=1000
NEXT_PUBLIC_CHAT_HISTORY_LIMIT=50